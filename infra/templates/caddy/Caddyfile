(auth_proxy_list) {
  trusted_proxies 172.1.0.0/16
}

(duckdns) {
  tls {
    dns duckdns ${DUCKDNS_TOKEN}
  }
}

(authelia_proxy) {
  forward_auth authelia:9091 {
    uri /api/verify?rd=https://auth.${HOSTNAME}/
    copy_headers Remote-User Remote-Groups Remote-Name Remote-Email
    import auth_proxy_list
  }
}

(authelia_basic) {
  forward_auth authelia:9091 {
    uri /api/verify?auth=basic
  }
}

{
  # Use ZeroSSL for certs
  acme_ca https://acme.zerossl.com/v2/DV90
  cert_issuer zerossl ${ZEROSSL_APPKEY}
  email ${ADMIN_EMAIL}
}

dashy.$HOSTNAME {
  import duckdns
  import authelia_proxy
  reverse_proxy dashy:80
}

auth.$HOSTNAME {
  import duckdns
  reverse_proxy authelia:9091 {
    ## This import needs to be included if you're relying on a trusted proxies configuration.
    import auth_proxy_list
  }
}

whoami.$HOSTNAME {
  import duckdns
  import authelia_proxy
  reverse_proxy whoami:80 {
    import auth_proxy_list
  }
}

hass.$HOSTNAME {
  import duckdns
  reverse_proxy ${IPNETWORK}.3:8123
}

paperless.$HOSTNAME {
  import duckdns
  import authelia_proxy
  reverse_proxy paperless:8000 {
    import auth_proxy_list
  }
}

audiobookshelf.$HOSTNAME {
  import duckdns
  reverse_proxy audiobookshelf:80
}

bookstack.$HOSTNAME {
  import duckdns
  reverse_proxy bookstack:80
}

emulator.$HOSTNAME {
  import duckdns
  reverse_proxy emulatorjs:80
}

jellyfin.$HOSTNAME {
  import duckdns
  reverse_proxy jellyfin:8096 {
    import auth_proxy_list
  }
}

kavita.$HOSTNAME {
  import duckdns
  reverse_proxy kavita:5000
}

tandoor.$HOSTNAME {
  import duckdns
  reverse_proxy tandoor_frontend {
    import auth_proxy_list
  }
}

wikijs.$HOSTNAME {
  import duckdns
  reverse_proxy wikijs:3000 {
    import auth_proxy_list
  }
}
